<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    android:fitsSystemWindows="false"
    android:padding="20dp"
    android:background="#fffaf5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="49dp" />

        <TextView
            android:id="@+id/categoryTextViewMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/categories_text_view"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#6d4c41" />

        <EditText
            android:id="@+id/categoryTextView"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:hint="@string/category_text_hint"
            android:inputType="text"
            android:textColor="#6d4c41"
            android:textColorHint="#aaa193"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/edit_text_background" />

        <EditText
            android:id="@+id/etCategoryDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/Category_description_hint"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:textColor="#6d4c41"
            android:textColorHint="#aaa193"
            android:padding="12dp"
            android:background="@drawable/edit_text_background" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="22dp" />

        <Button
            android:id="@+id/btnSubmitCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/submit_button"
            android:layout_marginTop="24dp"
            android:padding="14dp"
            android:backgroundTint="#6d4c41"
            android:textColor="#ffffff" />
    </LinearLayout>
</ScrollView>
