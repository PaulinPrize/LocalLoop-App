<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="#fffaf5"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_arrow_back"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/back_button"
        android:layout_margin="16dp"
        android:padding="12dp" />

    <TextView
        android:id="@+id/textViewMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/manage_category_textView"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#6d4c41" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_marginTop="12dp"
        android:background="#ffffff"
        android:elevation="2dp">

        <TextView
            android:id="@+id/textViewEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edit_category"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#6d4c41" />

        <Button
            android:id="@+id/categoryEditButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_category_button"
            android:textColor="#ffffff"
            android:backgroundTint="#6d4c41"
            android:layout_marginTop="8dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <TextView
            android:id="@+id/textViewDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/delete_category"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#6d4c41" />

        <Button
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete_category_button"
            android:textColor="#ffffff"
            android:backgroundTint="#d32f2f"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</LinearLayout>
